{
    "name": "@micjanic/split-flap-display",
    "version": "1.0.51",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "Michael Janicki",
        "url": "https://github.com/micjanic"
    },
    "bin": {
        "create-boilerplate": "./bin/generate-app.cjs"
    },
    "keywords": [],
    "files": [
        "dist",
        "README.md"
    ],
    "main": "./dist/split-flap-display.umd.js",
    "module": "./dist/split-flap-display.es.js",
    "exports": {
        ".": {
            "import": "./dist/split-flap-display.es.js",
            "require": "./dist/split-flap-display.umd.js"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "scripts": {
        "dev": "vite",
        "prebuild": "npm version patch --no-git-tag-version && git add package.json && git commit -m \"chore(release): bump version to %s\" && git push",
        "build": "npm run prebuild && tsc && vite build",
        "publish": "npm run build && npm publish",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@pixi/react": "^7.1.0",
        "@types/node": "^20.12.7",
        "@types/pixi.js": "^5.0.0",
        "@types/react": "^18.2.66",
        "@types/react-dom": "^18.2.22",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.19",
        "eslint": "^8.45.0",
        "pixi.js": "7.4.2",
        "postcss": "^8.4.40",
        "prettier": "^3.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.3",
        "typescript": "5.1.6",
        "vite": "^5.2.0"
    },
    "peerDependencies": {
        "@pixi/react": "^7.1.0",
        "pixi.js": "7.4.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.3"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": true,
            "es2020": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended"
        ],
        "parserOptions": {
            "sourceType": "module"
        }
    },
    "dependencies": {
        "postcss-cli": "^11.0.0",
        "rollup-plugin-postcss": "^4.0.2",
        "styled-components": "^6.1.12"
    }
}
